{
  "name": "mcp-notify",
  "version": "1.0.0",
  "description": "MCP server with long-running tools and notification system",
  "main": "dist/server/index.js",
  "type": "commonjs",
  "scripts": {
    "build": "npm run clean && tsc",
    "build:watch": "tsc --watch",
    "dev": "ts-node",
    "dev:server": "ts-node src/server/index.ts",
    "dev:client": "ts-node src/client/index.ts",
    "server": "npm run build && node dist/server/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:working": "node scripts/run-tests.js working",
    "test:shared": "node scripts/run-tests.js shared",
    "test:server": "node scripts/run-tests.js server",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist && find src -name '*.js' -type f -delete",
    "typecheck": "tsc --noEmit",
    "start": "npm run server",
    "inspect:dev": "npx @modelcontextprotocol/inspector ts-node src/server/index.ts",
    "inspect:prod": "npx @modelcontextprotocol/inspector node dist/server/index.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "notifications",
    "long-running",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "zod": "^3.25.28"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.21",
    "eslint": "^9.27.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "zod-to-json-schema": "^3.24.5"
  }
}
